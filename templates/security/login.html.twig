{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('css/styles.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as {{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<a href="/">Atrás</a>
		<div class="centrar">
			<div class="flex-container">
				<div class="form">
					<div class="form__section">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form__input" autocomplete="username" placeholder="Usuario" required autofocus>
					</div>
					<div class="form__section">
                        <input type="password" name="password" id="inputPassword" class="form__input" autocomplete="current-password" placeholder="Contraseña" required>
					</div>
					<div>
                        <button class="btn btn-lg btn-primary form__input" type="submit">
			            Iniciar Sesión
		                </button>
					</div>
					<div class="form__inputB">
						<a href="/register">Registrarme</a>
					</div>
				</div>
			</div>
		</div>
		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See https://symfony.com/doc/current/security/remember_me.html.
					<div class="checkbox mb-3">
				        <label>
							<input type="checkbox" name="_remember_me"> Remember me
						</label>
					</div>
				#}
	</form>
{% endblock %}